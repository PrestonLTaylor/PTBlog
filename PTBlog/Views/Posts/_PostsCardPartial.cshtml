@model IEnumerable<PostModel>

<hr class="hr" />
@foreach (var post in Model)
{
	<div class="post-card">
		<h2><cite>@post.Title</cite> By @post.Author.Username</h2>
		<a asp-area="" asp-controller="Posts" asp-action="Listing" asp-route-id="@post.Id">READ BLOG</a>
		<p>Created at: @Html.DisplayFor(model => post.CreatedDate)</p>
	</div>
	<hr class="hr" />
}