@model PostDTO
@{
	ViewData["Title"] = "Create a blog post!";
}

<div class="row">
	<section>
		<h1>Create a new blog post!</h1>
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="form-group blog-form-item">
				<label asp-for="Title" class="form-label">Title</label>
				<input asp-for="Title" class="form-control" autocomplete="Title" aria-required="true" placeholder="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group blog-form-item">
				<label asp-for="Content" class="form-label">Content</label>
				<textarea asp-for="Content" class="form-control" autocomplete="Content" aria-required="true" placeholder="Content" rows="6"></textarea>
				<span asp-validation-for="Content" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-outline-success" />
				<a class="btn btn-outline-info" asp-action="Listings">Back to listings</a>
			</div>
		</form>
	</section>
</div>
