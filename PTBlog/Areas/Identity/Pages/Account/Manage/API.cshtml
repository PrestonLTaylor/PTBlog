@page
@model ApiModel
@{
    ViewData["Title"] = "API";
    ViewData["ActivePage"] = ManageNavPages.API;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <h4>WARNING: Generating a new API key removes the ability to use previous api keys!</h4>

        <form asp-page="RevokeAPIKey" method="post">
            <button class="btn btn-outline-danger" name="revoke" value="revoke">Revoke API key</button>
        </form>
        <form method="post">
            <button class="btn btn-outline-warning" name="generate" value="generate">Generate API key</button>
        </form>

        @if (Model.GeneratedApiKey is not null)
        {
            <p>Generated API key: @Model.GeneratedApiKey</p>
        }
    </div>
</div>
